                dataType: 'json',
                success: function (data) {
                    var jTargetSelect = jQuery("#ddJobTypes");
                    jTargetSelect.children().remove();
                    jQuery(data).each(function () {
                        jTargetSelect.append('<option>' + this.Group + '/' + this.Name + '</option>');
